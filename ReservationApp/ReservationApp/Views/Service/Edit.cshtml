@model ServiceEditViewModel

@{

    ViewBag.Title = "BeautyCenter | Edit Service";

    var ExistingPhotoPath = "/images/" + (Model.ImagePath ?? "service.jpg");

}


<div class="my-2 text-left col-12">
    <h2> Update Service</h2>
    <hr />
</div>

<form enctype="multipart/form-data" class="mx-lg-auto my-5 w-50" asp-action="Edit" asp-controller="Service" method="post">
    <input hidden asp-for="CreateDate">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ImagePath" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price">
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details"></label>
        <textarea class="form-control" asp-for="Details"></textarea>
        <span asp-validation-for="Details" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupeFileAdd01">Upload</span>

            </div>
            <div class="custom-file">
                <input asp-for="Image" accept="image/*" class="custom-file-input" id="inputGroupeFile01" />
                <label class="custom-file-label" for="inputGroupeFile01">Choose File...</label>
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            @if (Model.ImagePath != null)
            {
                <img src="@ExistingPhotoPath" asp-append-version="true" class="card-img-top" alt="@Model.Name" />
            }
            else
            {
                <span class="alert alert-info">Image Service Not Set</span>
            }


        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section CreateSectionJs{
    <script type="text/javascript">
    $(document).ready(function () {
        $("#inputGroupeFile01").on("change", function () {
            var inputImage = $(this).val().split("\\").pop();
            $(this).next(".custom-file-label").html(inputImage);
        })

    })

    </script>
}
