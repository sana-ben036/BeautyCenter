@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager
@model Reservation

@{

    ViewBag.Title = "BeautyCenter  | New Reservation";

}

<div class="my-2 text-left col-12">
    <h2> Create New Reservation</h2>
    <hr />
</div>

<form class="mx-lg-auto my-5 w-50" method="post">
    <input hidden class="form-control" type="datetime" asp-for="CreateDate" value="@DateTime.Now">
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input type="datetime-local" class="form-control"
               asp-for="BookingDate"
               min="2020-06-07" max="2022-06-14">
        <span asp-validation-for="BookingDate" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingTime"></label>
        <input type="time" class="form-control"
               asp-for="BookingTime"
               min="10:00" max="18:00">
        <small>Office hours are 10am to 6pm</small>
        <span asp-validation-for="BookingTime" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceId"></label>
        <select asp-for="ServiceId" class="form-control">
            <option value="">Select Type...</option>
            @foreach (Service service in ViewBag.Services)
            {
                <option value="@service.Id">@service.Name </option>
            }

        </select>
        <span asp-validation-for="Service" class="small text-danger"></span>
    </div>
    <div hidden class="form-group">
        <input class="form-control" asp-for="UserId" value="@ViewBag.UserId">
    </div>



    <button type="submit" class="btn btn-primary">Create</button>
    <div class="text text-danger" hidden asp-validation-summary="All"></div>




</form>
