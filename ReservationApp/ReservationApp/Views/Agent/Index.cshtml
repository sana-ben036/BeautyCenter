@model IEnumerable<Agent>

@{
    int counter = 1;
    ViewBag.Title = "BeautyCenter | Agent";
}

<div class="my-2 text-left col-12">
    <h2> List of Agents </h2>
    <hr />
</div>

<div class="mx-lg-auto my-2 col-12 ">
    <table id="AgentTable" class="table table-hover text-center ">
        <thead class="alert-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Service</th>
                <th scope="col">IsActive</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Agent agent in Model)
                {
                        <tr>
                            <td>@counter</td>
                            <td>@agent.FirstName</td>
                            <td>@agent.LastName</td>
                            <td>@agent.Service.Name</td>
                            <td>@agent.IsActive</td>

                            <td>

                                <form method="post" asp-action="Delete" asp-controller="Agent" asp-route-id="@agent.Id">
                                    <a class="btn btn-warning text-white btn-sm" asp-action="Edit" asp-controller="Agent" asp-route-id="@agent.Id">Update</a>
                                    <button type="submit" class="btn btn-secondary btn-sm" onclick="return confirm('Are you sure to Delete ??')">Delete</button>
                                </form>


                            </td>
                        </tr>
                    counter++;

                }
            }


        </tbody>
    </table>

</div>


<div class="my-5 text-center">
    <a asp-action="Create">New Agent</a> |
    <a asp-action="login" asp-controller="Account">Back To Home</a>
</div>

@section DTListAgents{
    <script>
        $(document).ready(function () {
            $('#AgentTable').dataTable();
        });
    </script>

}
